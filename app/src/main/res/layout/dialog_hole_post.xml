<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="cn.edu.pku.treehole.viewmodels.hole.HoleViewPagerViewModel" />
    </data>


        <RelativeLayout
            android:id="@id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dialog_margin"
            android:layout_marginEnd="@dimen/dialog_margin"
            android:background="@drawable/bg_dialog"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/container_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

                <RelativeLayout
                    android:id="@+id/container_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/dialog_post_title"
                        android:textSize="24.0sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btn_hole_post_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:alpha="0.5"
                        android:onClick="@{()->viewModel.postNewHole()}"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_send_black_36" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/et_hole_post"
                    style="?android:attr/textViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/container_title"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:text="@={viewModel.postTextContent}"
                    android:adjustViewBounds="true"
                    tools:text="@string/hole_test_text"
                    android:background="@null"
                    android:hint="说些什么吧~"
                    android:minHeight="120dp" />

                <ImageView
                    android:id="@+id/img_preview"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@id/et_hole_post"
                    android:layout_alignParentStart="true"
                    tools:src="@drawable/bg_drawer_header"
                    app:hasLocalImage="@{viewModel.localPicFile}"
                    app:imageFromFile="@{viewModel.localPicFile}"
                    tools:visibility="visible"
                    android:scaleType="center"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/container_addons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/container_input"
                android:background="@drawable/bg_dialog_addons"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageButton
                    android:id="@+id/btn_hole_post_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:onClick="@{()->viewModel.getLocalPicture()}"
                    android:alpha="0.7"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_insert_photo_black_36" />

                <!--            <ImageButton-->
                <!--                android:id="@+id/btn_hole_post_audio"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:alpha="0.5"-->
                <!--                android:background="@android:color/transparent"-->
                <!--                android:src="@drawable/ic_mic_black_36dp" />-->
            </LinearLayout>
        </RelativeLayout>
</layout>