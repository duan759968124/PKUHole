<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="cn.edu.pku.treehole.viewmodels.hole.HoleViewPagerViewModel" />
    </data>


        <RelativeLayout
            android:id="@id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dialog_margin"
            android:layout_marginEnd="@dimen/dialog_margin"
            android:background="@drawable/bg_dialog"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/container_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

                <RelativeLayout
                    android:id="@+id/container_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/dialog_post_title"
                        android:textSize="24.0sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btn_hole_post_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:alpha="0.5"
                        android:onClick="@{()->viewModel.postNewHole()}"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_send_black_36" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/et_input_valid_code"
                    style="?android:attr/textViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/container_title"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:textCursorDrawable="@drawable/bg_edittext"
                    android:text="@={viewModel.postTextContent}"
                    android:adjustViewBounds="true"
                    tools:text="@string/hole_test_text"
                    android:background="@null"
                    android:hint="说些什么吧~"
                    android:minHeight="120dp" />

                <ImageView
                    android:id="@+id/img_preview"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@id/et_input_valid_code"
                    android:layout_alignParentStart="true"
                    tools:src="@drawable/bg_drawer_header"
                    app:hasLocalImage="@{viewModel.localPicFile}"
                    app:imageFromFile="@{viewModel.localPicFile}"
                    tools:visibility="visible"
                    android:scaleType="center"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/container_addons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/container_input"
                android:background="?attr/colorSecondaryVariant"
                android:paddingTop="8dp"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

<!--                android:layout_marginLeft="@dimen/activity_horizontal_margin"-->
                <ImageButton
                    android:id="@+id/btn_hole_post_image"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:onClick="@{()->viewModel.getLocalPicture()}"
                    android:alpha="0.7"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_insert_photo_black_36" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"/>

                <TextView
                    android:id="@+id/tag_list_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:padding="7dp"
                    android:text="@{viewModel.tagTitle}"
                    android:onClick="@{()->viewModel.selectTagName()}"
                    tools:text="添加标签"
                    android:gravity="center"
                    />

<!--                <Spinner-->
<!--                    android:id="@+id/tag_spinner"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="@dimen/activity_horizontal_margin"-->
<!--                    android:layout_marginEnd="@dimen/activity_horizontal_margin"-->
<!--                    android:layout_weight="2"-->
<!--                    android:padding="5dp"-->
<!--                    android:spinnerMode="dropdown"-->
<!--                    android:dropDownVerticalOffset="30dp"-->
<!--                    android:dropDownWidth="100dp"-->
<!--                    android:popupBackground="@drawable/shape_for_custom_spinner"-->
<!--                    android:background="@drawable/selector_for_custom_spinner"-->
<!--                    android:entries="@{viewModel.tagNameList}"-->
<!--                    android:onItemSelected="@{(parent, view, pos, id)->viewModel.selectTagName(parent, view, pos, id)}"-->
<!--                    />-->



                <!--            <ImageButton-->
                <!--                android:id="@+id/btn_hole_post_audio"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:alpha="0.5"-->
                <!--                android:background="@android:color/transparent"-->
                <!--                android:src="@drawable/ic_mic_black_36dp" />-->
            </LinearLayout>
        </RelativeLayout>

</layout>