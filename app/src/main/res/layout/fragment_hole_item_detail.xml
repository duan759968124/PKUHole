<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="holeItemDetailViewModel"
            type="cn.edu.pku.pkuhole.viewmodels.hole.HoleItemDetailViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.hole.HoleItemDetailFragment">


        <TextView
            android:id="@+id/detail_title"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="8dp"
            android:text="@{holeItemDetailViewModel.holeAllListItemBean.text}"
            tools:text="text text" />

        <TextView
            android:id="@+id/detail_content"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            tools:text="text text"
            android:text="@{holeItemDetailViewModel.holeAllListItemBean.type}" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>