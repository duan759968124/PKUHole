<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="holeAllListItemBean"
            type="cn.edu.pku.pkuhole.data.hole.HoleAllListItemBean" />

<!--        <variable-->
<!--            name="clickListener"-->
<!--            type="cn.edu.pku.pkuhole.adapters.HoleItemListener" />-->
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>
<!-- android:onClick="@{()->clickListener.onClick(holeAllListItemBean)}"-->

<!--    Todo: 后续修改为Card模式 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:onClick="@{clickListener}"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/hole_pid"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="20sp"
            android:text="@{holeAllListItemBean.type}"
            android:textStyle="bold"
            tools:text="#2995822" />

        <View
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/hole_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@{holeAllListItemBean.text}"
            tools:text="@string/hole_test_text" />


    </LinearLayout>
</layout>