<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="cn.edu.pku.treehole.viewmodels.settings.ChangeTextSizeViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.settings.ChangeTextSizeFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            app:setBindTextSize="@{viewModel.currentContentSize}"
            android:gravity="center"
            android:text="@string/preview_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSecondary"
            android:orientation="horizontal"

            android:layout_gravity="bottom">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:setBindTextSize="@{viewModel.minContentSize}"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:textColor="@color/gray_500"
                android:gravity="end"
                android:text="A" />
            <com.google.android.material.slider.Slider
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="16"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:valueFrom="@{viewModel.minContentSize}"
                android:valueTo="@{viewModel.maxContentSize}"
                android:stepSize="1"
                android:value="@{viewModel.currentContentSize}"
                app:onValueChangeListener="@{(value)-> viewModel.onValueChanged(value)}"
                app:trackHeight="4dp"
                app:tickVisible="true"
                app:labelBehavior="gone"
                app:thumbRadius="10dp"
                app:thumbStrokeWidth="1dp"
                app:thumbColor="?attr/colorSecondary"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/gray_500"
                android:gravity="start"
                app:setBindTextSize="@{viewModel.maxContentSize}"
                android:layout_marginEnd="10dp"
                android:text="A" />
        </LinearLayout>


    </FrameLayout>
</layout>