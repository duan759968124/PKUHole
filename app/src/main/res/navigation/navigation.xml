<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@+id/nav_hole">

    <fragment
        android:id="@+id/nav_hole"
        android:name="cn.edu.pku.pkuhole.ui.hole.HoleViewPagerFragment"
        android:label="@string/menu_hole"
        tools:layout="@layout/fragment_hole_view_pager">
        <action
            android:id="@+id/action_nav_hole_to_nav_hole_detail"
            app:destination="@id/nav_hole_detail" />
    </fragment>

    <fragment
        android:id="@+id/nav_settings"
        android:name="cn.edu.pku.pkuhole.ui.settings.SettingsFragment"
        android:label="@string/menu_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/nav_hole_detail"
        android:name="cn.edu.pku.pkuhole.ui.hole.HoleItemDetailFragment"
        android:label="@string/hole_datail"
        tools:layout="@layout/fragment_hole_item_detail">
        <argument
            android:name="pid"
            app:argType="long" />
    </fragment>

</navigation>